{
  "manifest_version": 3,
  "name": "X/Twitter 侧边栏",
  "version": "1.0",
  "description": "在浏览器侧边栏中打开 X (Twitter)。",
  "permissions": [
    "sidePanel",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打开 X 侧边栏",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
